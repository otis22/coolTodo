#!/bin/bash

# –°–∫—Ä–∏–ø—Ç –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏ –ø—Ä–æ–µ–∫—Ç–∞ CoolTodo
# –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –Ω–∞—Å—Ç—Ä–∞–∏–≤–∞–µ—Ç –ª–æ–∫–∞–ª—å–Ω–æ–µ –æ–∫—Ä—É–∂–µ–Ω–∏–µ —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–∏

set -e

# –¶–≤–µ—Ç–∞ –¥–ª—è –≤—ã–≤–æ–¥–∞
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

# –§—É–Ω–∫—Ü–∏—è –¥–ª—è –≤—ã–≤–æ–¥–∞ —Å–æ–æ–±—â–µ–Ω–∏–π
info() {
    echo -e "${GREEN}‚úì${NC} $1"
}

warn() {
    echo -e "${YELLOW}‚ö†${NC} $1"
}

error() {
    echo -e "${RED}‚úó${NC} $1"
    exit 1
}

# –§—É–Ω–∫—Ü–∏—è –¥–ª—è –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏—è –∫–æ–º–∞–Ω–¥—ã docker compose
get_docker_compose() {
    if command -v docker-compose &> /dev/null; then
        echo "docker-compose"
    elif docker compose version &> /dev/null; then
        echo "docker compose"
    else
        error "Docker Compose –Ω–µ –Ω–∞–π–¥–µ–Ω"
    fi
}

# –ü—Ä–æ–≤–µ—Ä–∫–∞ –Ω–∞–ª–∏—á–∏—è –Ω–µ–æ–±—Ö–æ–¥–∏–º—ã—Ö –∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç–æ–≤
check_requirements() {
    info "–ü—Ä–æ–≤–µ—Ä–∫–∞ —Ç—Ä–µ–±–æ–≤–∞–Ω–∏–π..."
    
    if ! command -v docker &> /dev/null; then
        error "Docker –Ω–µ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω. –£—Å—Ç–∞–Ω–æ–≤–∏—Ç–µ Docker –∏ –ø–æ–≤—Ç–æ—Ä–∏—Ç–µ –ø–æ–ø—ã—Ç–∫—É."
    fi
    
    if ! command -v docker-compose &> /dev/null && ! docker compose version &> /dev/null; then
        error "Docker Compose –Ω–µ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω. –£—Å—Ç–∞–Ω–æ–≤–∏—Ç–µ Docker Compose –∏ –ø–æ–≤—Ç–æ—Ä–∏—Ç–µ –ø–æ–ø—ã—Ç–∫—É."
    fi
    
    if ! command -v npm &> /dev/null; then
        error "npm –Ω–µ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω. –£—Å—Ç–∞–Ω–æ–≤–∏—Ç–µ Node.js –∏ –ø–æ–≤—Ç–æ—Ä–∏—Ç–µ –ø–æ–ø—ã—Ç–∫—É."
    fi
    
    info "–í—Å–µ —Ç—Ä–µ–±–æ–≤–∞–Ω–∏—è –≤—ã–ø–æ–ª–Ω–µ–Ω—ã"
}

# –°–æ–∑–¥–∞–Ω–∏–µ .env —Ñ–∞–π–ª–∞
setup_env() {
    info "–ù–∞—Å—Ç—Ä–æ–π–∫–∞ –æ–∫—Ä—É–∂–µ–Ω–∏—è..."
    
    if [ -f "backend/.env" ]; then
        warn "–§–∞–π–ª backend/.env —É–∂–µ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç, –ø—Ä–æ–ø—É—Å–∫–∞–µ–º —Å–æ–∑–¥–∞–Ω–∏–µ"
    else
        if [ -f "backend/.env.example" ]; then
            cp backend/.env.example backend/.env
            info "–°–æ–∑–¥–∞–Ω backend/.env –∏–∑ backend/.env.example"
        else
            error "–§–∞–π–ª backend/.env.example –Ω–µ –Ω–∞–π–¥–µ–Ω"
        fi
    fi
}

# –ì–µ–Ω–µ—Ä–∞—Ü–∏—è APP_KEY
generate_app_key() {
    info "–ü—Ä–æ–≤–µ—Ä–∫–∞ APP_KEY..."
    
    if grep -q "APP_KEY=$" backend/.env || ! grep -q "APP_KEY=" backend/.env; then
        info "–ì–µ–Ω–µ—Ä–∞—Ü–∏—è APP_KEY..."
        if [ -f "dev" ]; then
            ./dev artisan key:generate --ansi || warn "–ù–µ —É–¥–∞–ª–æ—Å—å —Å–≥–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞—Ç—å –∫–ª—é—á (–≤–æ–∑–º–æ–∂–Ω–æ, –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä—ã –µ—â–µ –Ω–µ –∑–∞–ø—É—â–µ–Ω—ã)"
        else
            warn "–°–∫—Ä–∏–ø—Ç ./dev –Ω–µ –Ω–∞–π–¥–µ–Ω, –ø—Ä–æ–ø—É—Å–∫–∞–µ–º –≥–µ–Ω–µ—Ä–∞—Ü–∏—é –∫–ª—é—á–∞"
        fi
    else
        info "APP_KEY —É–∂–µ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω"
    fi
}

# –ó–∞–ø—É—Å–∫ Docker –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–æ–≤
start_docker() {
    info "–ó–∞–ø—É—Å–∫ Docker –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–æ–≤..."
    
    DOCKER_COMPOSE=$(get_docker_compose)
    $DOCKER_COMPOSE up -d
    
    info "–û–∂–∏–¥–∞–Ω–∏–µ –≥–æ—Ç–æ–≤–Ω–æ—Å—Ç–∏ MySQL..."
    # –ñ–¥–µ–º –≥–æ—Ç–æ–≤–Ω–æ—Å—Ç–∏ MySQL
    for i in {1..30}; do
        if docker compose exec -T mysql mysqladmin ping -h localhost --silent 2>/dev/null; then
            info "MySQL –≥–æ—Ç–æ–≤"
            break
        fi
        if [ $i -eq 30 ]; then
            warn "MySQL –Ω–µ –≥–æ—Ç–æ–≤ –ø–æ—Å–ª–µ 30 –ø–æ–ø—ã—Ç–æ–∫, –ø—Ä–æ–¥–æ–ª–∂–∞–µ–º..."
        else
            sleep 2
        fi
    done
}

# –£—Å—Ç–∞–Ω–æ–≤–∫–∞ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π backend
install_backend_dependencies() {
    info "–£—Å—Ç–∞–Ω–æ–≤–∫–∞ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π backend..."
    
    if [ -f "dev" ]; then
        ./dev composer install --no-interaction --prefer-dist
        info "–ó–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ backend —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω—ã"
    else
        error "–°–∫—Ä–∏–ø—Ç ./dev –Ω–µ –Ω–∞–π–¥–µ–Ω"
    fi
}

# –í—ã–ø–æ–ª–Ω–µ–Ω–∏–µ –º–∏–≥—Ä–∞—Ü–∏–π
run_migrations() {
    info "–í—ã–ø–æ–ª–Ω–µ–Ω–∏–µ –º–∏–≥—Ä–∞—Ü–∏–π –ë–î..."
    
    if [ -f "dev" ]; then
        ./dev artisan migrate --force || warn "–ú–∏–≥—Ä–∞—Ü–∏–∏ –Ω–µ –≤—ã–ø–æ–ª–Ω–µ–Ω—ã (–≤–æ–∑–º–æ–∂–Ω–æ, –ë–î –µ—â–µ –Ω–µ –≥–æ—Ç–æ–≤–∞)"
        info "–ú–∏–≥—Ä–∞—Ü–∏–∏ –≤—ã–ø–æ–ª–Ω–µ–Ω—ã"
    else
        warn "–°–∫—Ä–∏–ø—Ç ./dev –Ω–µ –Ω–∞–π–¥–µ–Ω, –ø—Ä–æ–ø—É—Å–∫–∞–µ–º –º–∏–≥—Ä–∞—Ü–∏–∏"
    fi
}

# –£—Å—Ç–∞–Ω–æ–≤–∫–∞ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π frontend
install_frontend_dependencies() {
    info "–£—Å—Ç–∞–Ω–æ–≤–∫–∞ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π frontend..."
    
    if [ -d "frontend" ]; then
        DOCKER_COMPOSE=$(get_docker_compose)
        
        # –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ —á–µ—Ä–µ–∑ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä node
        # –ò—Å–ø–æ–ª—å–∑—É–µ–º run --rm –¥–ª—è –æ–¥–Ω–æ—Ä–∞–∑–æ–≤–æ–≥–æ –≤—ã–ø–æ–ª–Ω–µ–Ω–∏—è - —ç—Ç–æ –±–æ–ª–µ–µ –Ω–∞–¥–µ–∂–Ω–æ,
        # —Ç–∞–∫ –∫–∞–∫ –Ω–µ –∑–∞–≤–∏—Å–∏—Ç –æ—Ç —Å–æ—Å—Ç–æ—è–Ω–∏—è –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞ node
        # –ö–æ–Ω—Ç–µ–π–Ω–µ—Ä node –º–æ–∂–µ—Ç –±—ã—Ç—å –Ω–µ –∑–∞–ø—É—â–µ–Ω –∏–ª–∏ –∏–º–µ—Ç—å –ø—Ä–æ–±–ª–µ–º—ã —Å –ø—Ä–∞–≤–∞–º–∏
        $DOCKER_COMPOSE run --rm node sh -c "cd /app && npm ci"
        
        info "–ó–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ frontend —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω—ã"
    else
        warn "–î–∏—Ä–µ–∫—Ç–æ—Ä–∏—è frontend –Ω–µ –Ω–∞–π–¥–µ–Ω–∞, –ø—Ä–æ–ø—É—Å–∫–∞–µ–º —É—Å—Ç–∞–Ω–æ–≤–∫—É –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π frontend"
    fi
}

# –ü—Ä–æ–≤–µ—Ä–∫–∞ —Ä–∞–±–æ—Ç–æ—Å–ø–æ—Å–æ–±–Ω–æ—Å—Ç–∏ (–æ–ø—Ü–∏–æ–Ω–∞–ª—å–Ω–æ)
check_health() {
    info "–ü—Ä–æ–≤–µ—Ä–∫–∞ —Ä–∞–±–æ—Ç–æ—Å–ø–æ—Å–æ–±–Ω–æ—Å—Ç–∏..."
    
    # –ü—Ä–æ–≤–µ—Ä—è–µ–º –¥–æ—Å—Ç—É–ø–Ω–æ—Å—Ç—å API (–æ–ø—Ü–∏–æ–Ω–∞–ª—å–Ω–æ, –Ω–µ –∫—Ä–∏—Ç–∏—á–Ω–æ)
    if command -v curl &> /dev/null; then
        sleep 3
        if curl -s http://localhost:8080/api/todos > /dev/null 2>&1; then
            info "API –¥–æ—Å—Ç—É–ø–µ–Ω"
        else
            warn "API –Ω–µ–¥–æ—Å—Ç—É–ø–µ–Ω (—ç—Ç–æ –Ω–æ—Ä–º–∞–ª—å–Ω–æ, –µ—Å–ª–∏ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä—ã –µ—â–µ –∑–∞–ø—É—Å–∫–∞—é—Ç—Å—è)"
        fi
    fi
}

# –í—ã–≤–æ–¥ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏ –æ —Å–ª–µ–¥—É—é—â–∏—Ö —à–∞–≥–∞—Ö
show_next_steps() {
    echo ""
    echo -e "${GREEN}üéâ –ü—Ä–æ–µ–∫—Ç —É—Å–ø–µ—à–Ω–æ –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä–æ–≤–∞–Ω!${NC}"
    echo ""
    echo "–°–ª–µ–¥—É—é—â–∏–µ —à–∞–≥–∏:"
    echo "  1. Backend API: http://localhost:8080/api"
    echo "  2. Frontend: http://localhost:5173"
    echo ""
    echo "–ü–æ–ª–µ–∑–Ω—ã–µ –∫–æ–º–∞–Ω–¥—ã:"
    echo "  ./dev shell              - –û—Ç–∫—Ä—ã—Ç—å shell –≤ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–µ app"
    echo "  ./dev artisan <command>  - –í—ã–ø–æ–ª–Ω–∏—Ç—å artisan –∫–æ–º–∞–Ω–¥—É"
    echo "  ./dev phpunit            - –ó–∞–ø—É—Å—Ç–∏—Ç—å —Ç–µ—Å—Ç—ã"
    echo "  ./dev phpstan            - –ó–∞–ø—É—Å—Ç–∏—Ç—å —Å—Ç–∞—Ç–∏—á–µ—Å–∫–∏–π –∞–Ω–∞–ª–∏–∑"
    echo ""
    echo "–î–ª—è –æ—Å—Ç–∞–Ω–æ–≤–∫–∏ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–æ–≤:"
    echo "  docker compose down"
    echo ""
}

# –ì–ª–∞–≤–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è
main() {
    echo "=========================================="
    echo "  CoolTodo - –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø—Ä–æ–µ–∫—Ç–∞"
    echo "=========================================="
    echo ""
    
    check_requirements
    setup_env
    start_docker
    generate_app_key
    install_backend_dependencies
    run_migrations
    install_frontend_dependencies
    check_health
    show_next_steps
}

# –ó–∞–ø—É—Å–∫
main

