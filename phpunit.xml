<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="backend/vendor/autoload.php"
         colors="true"
         cacheDirectory=".phpunit.cache"
         testdox="true">
    <testsuites>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory>tests/Feature</directory>
        </testsuite>
    </testsuites>
    <source>
        <include>
            <directory>backend/src</directory>
        </include>
    </source>
    <php>
        <!--
            Environment variables for testing.
            Note: Variables set in system environment (e.g., CI workflow) will override these values.
            This allows the same configuration to work both locally (Docker) and in CI (GitHub Actions).
            
            Local (Docker): Uses values below (DB_HOST=mysql, DB_USERNAME=cooltodo)
            CI (GitHub Actions): Overrides with env vars in workflow (DB_HOST=127.0.0.1, DB_USERNAME=root)
        -->
        <env name="APP_ENV" value="testing"/>
        <env name="BCRYPT_ROUNDS" value="4"/>
        <env name="CACHE_DRIVER" value="array"/>
        <env name="DB_CONNECTION" value="mysql"/>
        <!-- Default for local Docker development (can be overridden by env vars) -->
        <env name="DB_HOST" value="mysql"/>
        <env name="DB_PORT" value="3306"/>
        <env name="DB_DATABASE" value="cooltodo_test"/>
        <env name="DB_USERNAME" value="cooltodo"/>
        <env name="DB_PASSWORD" value="root"/>
        <env name="MAIL_MAILER" value="array"/>
        <env name="PULSE_ENABLED" value="false"/>
        <env name="QUEUE_CONNECTION" value="sync"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="TELESCOPE_ENABLED" value="false"/>
    </php>
</phpunit>






